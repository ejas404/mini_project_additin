<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <header>
        <%- include('../partials/navbar') %>
    </header>
    <div class="dashboard-container">
        <div class="admin-sidebar">
            <ul>
                <li><a href="/admin/dashboard">Dashboard</a></li>
                <li><a href="/admin/orders">Orders</a></li>
                <li><a href="/admin/products">Products</a></li>
                <li><a href="/admin/users">Users</a></li>
            </ul>

            <div class="filterbox">
                <h5>Filter:</h5>
                <ul>
                    <li><a href="">All</a></li>
                    <% for(let each of locals.categories) { %>
                    <li><a href="/admin/products/<%= each.category_id %>"><%= each.categoryName %></a></li>
                    <% } %>
                </ul>
            </div>
            <div class="logout-button">
                <a href="">Logout</a>
            </div>
        </div>
        <div class="userlists-div">
            <div class="product-details-box">
                <% for(let each of locals.products){ %>
                <div class="product">
                    <div class="product-image">
                        <img src="\<%= each.productImg.replace(/public\\/,'') %>" alt="">
                    </div>
                    <div class="product-description">
                        <p><span>Product Name :</span> <%= each.productName %></p>
                        <p><span>Category :</span> <%= each.category[0].categoryName  %></p><br>
                        <p><span>Price :</span> <%= each.productPrice %>/-</p>
                        <p><span>Weight :</span> <%= each.productWeight %> kg</p>
                        <p><span>Quantity :</span> <%= each.productQuantity %> pcs</p><br>
                        <p><span>Description :</span> <%= each.productDescription %></p>
                    </div>
                    <div class="buttons">
                        <a href="">edit</a><br>
                        <a href="">delete</a>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('../partials/footer')%>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>

</body>

</html>