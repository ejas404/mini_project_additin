<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Additin</title>
    <%- include('../partials/bootstrap-styles') %>
        <link rel="stylesheet" href="/style.css">
</head>

<body>
    <header>
        <%- include('../partials/navbar') %>
    </header>

    <div class="homepage">

        <div class="container-fluid homepage-banner">
            <div style="height: inherit;" id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img style="max-height: 400px; object-fit: cover;" class="d-block w-100 img-fluid"
                            src="<%= topBanners[0].path[0] %>" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img style="max-height: 400px; object-fit: cover;" class="d-block img-fluid "
                            src="<%= topBanners[0].path[1] %>" alt="Second slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
        <div class=" container features py-3">
            <div class=" text-center">
                <h1 class="double-underline poppins mb-5">We are providing </h1>
            </div>
            <div class=" row g-5 features-lists">
                <div class="col-sm">
                    <div class="card text-center card-box">
                        <i class="bi bi-capsule-pill" style="font-size: 4rem;"></i>
                        <div class="card-body">
                            <p class="card-text">Pet food </p>
                        </div>
                    </div>
                </div>

                <div class="col-sm card-box">
                    <div class="card text-center">
                        <i class="bi bi-capsule-pill" style="font-size: 4rem;"></i>
                        <div class="card-body">
                            <p class="card-text">Medicines </p>
                        </div>
                    </div>
                </div>

                <div class="col-sm">
                    <div class="card text-center card-box">
                        <i class="bi bi-capsule-pill" style="font-size: 4rem;"></i>
                        <div class="card-body">
                            <p class="card-text">Petcare </p>
                        </div>
                    </div>
                </div>

                <div class="col-sm">
                    <div class="card text-center card-box">
                        <i class="fa-solid fa-clock-rotate-left" style="color: #ffffff; font-size: 4rem;"></i>
                        <div class="card-body">
                            <p class="card-text">24*7 service</p>
                        </div>
                    </div>
                </div>


            </div>
        </div>

        <div class="homepage-banner-2 d-flex justify-content-center">
            <div class="py-2 ">
                <img src="" style="object-fit: contain; max-height: 25rem; width: auto;" alt="">
            </div>
        </div>

        <div class="product-cards container py-5">
            <div class="row">
                <% if (! locals.products[0]) {%>
                    <div class="empty-message text-center">
                        <h1>Sorry No Products Please Check after some time</h1>
                    </div>
                    <% } %>
                        <% for(let each of locals.products) { %>
                            <!-- <div class="col-sm d-flex justify-content-center">
                        <div class="card" style="max-width: 20rem; max-height: 35rem; margin: 0;">
                            <img src="<%= each.productImg[0] %>" class="card-img-top" style="max-height: 15rem;" alt="...">
                        
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= each.productName %>
                                </h5>
                                <h4>Rs.<%= each.productPrice %></h4>
                            
                                <a class="seemore" href="/singleproduct/<%= each.product_id %>">see more</a>
                            </div>
                        </div>
                    </div> -->

                            <div class="col-lg-4 col-md-6 pt-md-0 pt-3 text-center position-relative">
                                <a style="text-decoration: none;" class="" href="/singleproduct/<%= each.product_id %>">
                                    <div style="height: 350px;" class="card d-flex flex-column align-items-center ">

                                        <div class="card-img"> <img src="<%= each.productImg[0] %>" alt="" height="100"
                                                id="shirt">
                                        </div>
                                        <div class="product-name">
                                            <%= each.productName %>
                                        </div>
                                        <div class="card-body pt-0">

                                            <div class="d-flex align-items-center price">
                                                <div class="del mr-2"><span class="text-dark"
                                                        style="font-size: 15px;">Rs.<%= Number(each.productPrice) + 1000
                                                            %></span></div>
                                                <div class="font-weight-bold "
                                                    style="font-weight: bold; margin-left: 5px;">Rs.<%=each.productPrice
                                                        %>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </a>
                                <div class="productButtons position-absolute d-flex justify-content-between"
                                    style="width: 22.5rem;top: 88%; padding: 0 10px;">

                                    <% if (locals.cart && locals.cart[0]?.productIds.includes(each.product_id)) { %>
                                        <a class="default-button px-2 rounded d-block" href="">Go to Cart -></a>
                                        <% } else { %>
                                            <div class="pb-1 add-to-cart-btn"
                                                onclick="addToCart('<%= each.product_id %>')"><i
                                                    class="fa-solid fa-cart-plus" style="font-size: 25px;"></i></div>
                                            <% } %>

                                                <a class="buy-now-btn d-block rounded" style="text-decoration: none;"
                                                    href="">Buy Now -></a>

                                </div>
                                <div class="wishlist position-absolute top-0">
                                    <a href="">heart</a>
                                </div>

                            </div>

                            <% } %>
            </div>
            <div class="pagination d-flex justify-content-center mt-5" style="border-color: #fff;">
                <% if (locals.products[0]) {%>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>

                                </a>
                            </li>

                            <% for (let i=0; i < Math.ceil(locals.count/3) ; i++) { %>
                                <li class="page-item"><a class="page-link" href="/products/<%= i %>">
                                        <%= i+1 %>
                                    </a></li>
                                <% } %>

                                    <li class="page-item">
                                        <a class="page-link" href="#" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                        </ul>
                    </nav>
                    <% } %>
            </div>
        </div>



    </div>
    <script>
        function addToCart(id) {
            fetch(`/user/add-to-cart/${id}`, {
                method: 'GET',
                headers: {
                    'Content-type': 'application/json'
                }

            })
                .then((res) => {
                    return res.json()
                })
                .then((res) => {
                    if (res.successMsg) {
                        location.reload()
                        alert('product added to cart successfully')
                    } else {
                        window.location.href = res.redirect
                        alert(res.message)
                    }
                }).catch((e) => {
                    if (e) {
                        console.log(e)
                    }
                })
        }
    </script>
    <%- include('../partials/bootstrap-script') %>
        <%- include('../partials/footer')%>
</body>

</html>
