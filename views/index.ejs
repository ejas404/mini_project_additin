<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Additin</title>
    <%- include('../partials/bootstrap-styles') %>
        <link rel="stylesheet" href="/style.css">
</head>

<body>
    <header>
        <%- include('../partials/navbar') %>
    </header>
    <%- include('../partials/custom-alert') %>
        <div class="homepage">
            <div class="container-fluid homepage-banner">
                <div style="height: inherit;" id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img style="max-height: 400px; object-fit: cover;" class="d-block w-100 img-fluid"
                                src="<%= locals.topBanners[0]?.path[0] %>" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img style="max-height: 400px; object-fit: cover;" class="d-block img-fluid "
                                src="<%= locals.topBanners[0]?.path[1] %>" alt="Second slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
            <div class=" container features py-3">
                <div class=" text-center mb-5">
                    <h1 class="double-underline poppins mb-5">We are providing </h1>
                </div>
                <div class=" row g-5 features-lists">
                    <div class="col-6 col-md px-auto">
                        <div class="cards text-center card-box mx-auto 
                        d-flex justify-content-center align-items-center">
                            <div>
                                <i class="fa-solid fa-bowl-food" style="font-size: 2rem; color: rgb(5, 69, 5);"></i>
                                <div class="card-body">
                                    <p class="card-text mt-2">Pet food </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-md">
                        <div class="cards text-center card-box  mx-auto 
                        d-flex justify-content-center align-items-center">
                            <div>
                                <i class="bi bi-capsule-pill text-info" style="font-size: 2rem;"></i>
                                <div class="card-body">
                                    <p class="card-text">Medicines </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-md">
                        <div class="cards text-center card-box  mx-auto 
                        d-flex justify-content-center align-items-center">
                            <div>
                                <i class="fa-solid fa-hand-holding-heart text-warning" style="font-size: 2rem;"></i>
                                <div class="card-body">
                                    <p class="card-text mt-2">Petcare </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-md">
                        <div class="cards text-center card-box d-flex 
                        justify-content-center align-items-center  mx-auto ">
                            <div>
                                <i class="fa-solid fa-clock-rotate-left pb-2 text-danger"
                                    style=" font-size: 2rem;"></i>
                                <div class="card-body">
                                    <p class="card-text">24*7 service</p>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>

            <div class="homepage-banner-2 d-flex justify-content-center">
                <div class="py-2 ">
                    <img src="" style="object-fit: contain; max-height: 25rem; width: auto;" alt="">
                </div>
            </div>

            <div id="products" class="product-cards container py-5">
                <div class=" text-center mb-3">
                    <h1 class="double-underline poppins mb-5">Our Products</h1>
                </div>
                <div class="row gx-5" id="pagination-row" data-page-num="0">
                    <% if (! locals.products[0]) {%>
                        <div class="empty-message text-center">
                            <h1>Sorry No Products Please Check after some time</h1>
                        </div>
                        <% } %>
                            <% for(let each of locals.products) { %>

                                <div id="productCard"
                                    class="col-lg-4 col-md-6 pt-md-0 pt-3 px-5 text-center position-relative">
                                    <a style="text-decoration: none;" class="" href="/product/<%= each.product_id %>">
                                        <div style="height: 350px;" class="card d-flex flex-column align-items-center ">

                                            <div class="card-img"> <img src="<%= each.productImg[0] %>" alt=""
                                                    height="100" id="shirt">
                                            </div>
                                            <div class="product-name">
                                                <%= each.productName %>
                                            </div>
                                            <div class="card-body pt-0">

                                                <div class="d-flex align-items-center price">
                                                    <div class="del mr-2"><span class="text-dark"
                                                            style="font-size: 15px;">Rs.<%= Number(each.productPrice) +
                                                                1000 %></span></div>
                                                    <div class="font-weight-bold "
                                                        style="font-weight: bold; margin-left: 5px;">Rs.
                                                        <%=each.productPrice %>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </a>
                                    <div class="productButtons position-absolute d-flex justify-content-between"
                                        style="width: 22.5rem;top: 88%; padding: 0 10px;">

                                        <% if (locals.cartAndWish &&
                                            locals?.cartAndWish[0]?.cartIds?.includes(each.product_id)) { %>
                                            <a class="default-button px-2 rounded d-block" href="/cart">Go to Cart
                                                -></a>
                                            <% } else { %>
                                                <div class="pb-1 add-to-cart-btn"
                                                    onclick="addToCart('<%= each.product_id %>',this)"><i
                                                        class="fa-solid fa-cart-plus" style="font-size: 25px;"></i>
                                                </div>
                                                <% } %>
                                                   
                                    </div>
                                    <div class="wishlist position-absolute top-0 ms-1">


                                        <% if (locals.cartAndWish &&
                                            locals.cartAndWish[0]?.wishListIds?.includes(each.product_id)) { %>
                                            <i onclick="addToWishList('<%= each.product_id %>',this)" id="biHrt"
                                                class="bi bi-heart-fill wishlist-icon"></i>
                                            <% } else { %>
                                                <i onclick="addToWishList('<%= each.product_id %>',this)" id="biHrt"
                                                    class="bi bi-heart wishlist-icon"></i>
                                                <% } %>




                                    </div>

                                </div>

                                <% } %>
                </div>
                <div class="pagination d-flex justify-content-center mt-5" style="border-color: #fff;">
                    <% if (locals.products[0]) {%>
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item">
                                    <p class="page-link" onclick="paginatePrev()" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>

                                    </p>
                                </li>

                                <% for (let i=0; i < Math.ceil(locals.count/3) ; i++) { %>
                                    <li class="page-item paginate-buttons">
                                        <p onclick="paginate('<%= i %>',this)" class="page-link">
                                            <%= i+1 %>
                                        </p>
                                    </li>
                                    <% } %>

                                        <li class="page-item">
                                            <p class="page-link" onclick="paginateNext()" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </p>
                                        </li>
                            </ul>
                        </nav>
                        <% } %>
                </div>
            </div>



        </div>

        <%- include('../partials/bootstrap-script') %>
            <%- include('../partials/footer')%>

                <script defer src="/scripts/pagination.js"></script>
                <script defer src="/scripts/notification.js"></script>
                <script defer src="/scripts/add_to.js"></script>

</body>

</html>