<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../partials/bootstrap-styles') %>
        <link rel="stylesheet" href="/style.css">
</head>

<body>
    <header>
        <%- include('../partials/navbar') %>
    </header>
    <div class="userprofile-main">
        <div class="user-profile-box">
            <div class="left-cartdetails">
                <div class="head-name">
                    <h1 class="double-underline mb-5">My Cart</h1>
                </div>
                <% for (let each of locals.cartItems) { %>
                <div class="cart-item d-flex">
                    <div class="cart-item-img">
                        <img src="<%= each.productImg[0] %>" alt="">
                    </div>
                    <div class="cart-item-details">
                        <div class="cart-item-title">
                            <h6><%= each.productName %></h6>
                            <p class="product-price"><%= each.productPrice %></p>
                        </div>
                        <div class="cart-item-mid">
                            <div class="quantity">
                                <label for="quantity">Quantity:</label>
                                <input type="number" id="quantity" name="quantity" min="1" value="1">
                            </div>
                            <p class="product-weight"><span>Weight:</span> <%= each.productWeight %></p>
                        </div>
                        <div class="cart-item-mid">
                            <div></div>
                            <p>Remove</p>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>


            <%- include('../partials/user-sidebar') %>
        </div>

        <div class="placeorder">
            <h5>Price Details</h5>
            <div class="cart-item-mid">
                <p>items(4)</p>
                <p class="ind-rs">44444</p>
            </div>
            <div class="cart-item-mid">
                <p>shipping</p>
                <p class="ind-rs">40</p>
            </div>
            <div class="cart-item-mid">
                <p>total</p>
                <p class="ind-rs">4444</p>
            </div>
            <input class="default-button px-2 rounded mt-1" type="submit" value="placeorder">
        </div>

    </div>

    <%- include('../partials/footer')%>
        <%- include('../partials/bootstrap-script') %>
</body>

</html>